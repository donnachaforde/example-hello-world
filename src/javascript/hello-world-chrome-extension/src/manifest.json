{
  "name": "Hello World! Example Chrome Extension",
  "description": "Yet another Hello World! example but as a Chrome Extension.",
  "version": "0.0.0.1",
  "manifest_version": 3,

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "action": 
  {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "update_url": "http://url.to/updates.xml)"  
}
